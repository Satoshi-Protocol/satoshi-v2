  "main": "index.js",
  "scripts": {
    "clean": "rm -rf artifacts cache out",
    "compile": "$npm_execpath run compile:forge && $npm_execpath run compile:hardhat",
    "compile:forge": "forge build",
    "compile:hardhat": "hardhat compile",
    "c": "hardhat clean",
    "full-deploy:anvil": "forge script script/Deploy.s.sol --rpc-url 127.0.0.1:8545 --broadcast && forge script script/DeployHelpers.s.sol --rpc-url 127.0.0.1:8545 --broadcast",
    "full-deploy:arbitrum-sepolia": "forge script script/Deploy.s.sol --rpc-url arbitrum-sepolia --broadcast && forge script script/DeployHelpers.s.sol --rpc-url arbitrum-sepolia --broadcast",
    "full-deploy:holesky": "forge script script/Deploy.s.sol --rpc-url holesky --broadcast && forge script script/DeployHelpers.s.sol --rpc-url holesky --broadcast",
    "full-deploy:sepolia": "forge script script/Deploy.s.sol --rpc-url sepolia --broadcast && forge script script/DeployHelpers.s.sol --rpc-url sepolia --broadcast",
    "lint": "$npm_execpath run lint:js && $npm_execpath run lint:sol",
    "lint:fix": "eslint --fix '**/*.{js,ts,json}' && prettier --write . && solhint 'contracts/**/*.sol' --fix --noPrompt",
    "lint:js": "eslint '**/*.{js,ts,json}' && prettier --check .",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lz:deploy:debt-token": "hardhat compile && hardhat lz:deploy --tags DebtToken",
    "test": "$npm_execpath run test:forge && $npm_execpath run test:hardhat",
    "test:forge": "forge test",
    "test:hardhat": "hardhat test",
    "test:compile": "hardhat compile",
    "lz:set": "hardhat lz:oapp:wire --oapp-config layerzero.config.ts",
    "test:send": "hardhat lz:oft:send"
  },
  "resolutions": {
    "ethers": "^5.7.2",
    "hardhat-deploy": "^0.12.1"
  },
